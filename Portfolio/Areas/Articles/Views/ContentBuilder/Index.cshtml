@model Portfolio.Areas.Articles.Data.SectionBuilder;
@using Newtonsoft.Json;
@{

    ViewData["Title"] = "SectionBuilder";
    var json = JsonConvert.SerializeObject(Model).ToString();

}
<script type="module" src="~/js/sectionbuilder.js">
</script>
<script type="text/javascript">
    function draw(json) {
        var SectionBuilder = require("./sectionbuilder");
        let js = SectionBuilder.fromJs(JSON.parse(json));
       console.log(js);
    }
</script>
<body onload="draw(@json)">
    <h2>@Model.Title</h2>
    <form asp-action="Index">
        <input type="hidden" asp-for="Content" />
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <input type="submit" value="Save" class="btn btn-default" />
    </form>
    <div id="container">

    </div>
</body>