@model Portfolio.Areas.Articles.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>

<p>
    <a asp-action="Create">Create New Section</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sections)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.SectionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SectionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SectionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Articles" asp-action="Edit" asp-route-id=@Model.ArticleId>Back To Article</a>